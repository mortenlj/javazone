<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/htmx.org@2.0.6/dist/htmx.min.js"
            integrity="sha384-Akqfrbj/HpNVo8k11SXBb6TlBWmXXlYQrCSqEWmyKJe+hDm3Z/B2WVG4smwBkRVm"
            crossorigin="anonymous"></script>
    <title>{% block title %}{{ request.app.title }}{% endblock %}</title>
    {% block head %}
    {% endblock %}
</head>
<body>
<div style="display: contents">
    <main class="text-center text-lg-start bg-body">
        <div class="container py-4">
            <div class="hstack row">
                <h1 class="mb-3 col-10"><a class="h1 mb-3" href="/">{{ request.app.title }}</a></h1>
                <div class="col-2" hx-get="/widgets/profile" hx-trigger="load" hx-swap="innerHTML">
                    {% include "widgets/profile.html.j2" %}
                </div>
            </div>
            <div class="hstack row align-items-start py-5" style="min-height: 50vh !important;">
                <div class="col-10">
                    {% block content %}{% endblock %}
                </div>
                <div class="col-2 sticky-top">
                    {% block menu %}{% endblock %}
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="text-center text-lg-start bg-body-tertiary text-muted py-3 my-4">
        <section class="">
            <div class="container text-center text-md-start">
                <!-- Grid row -->
                <div class="row mt-3">
                    <!-- Grid column -->
                    <!-- Section: Disclaimer  -->
                    <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
                        <!-- Content -->
                        <h6 class="text-uppercase fw-bold mb-4">
                            <i class="fas fa-gem me-3"></i>Disclaimer
                        </h6>
                        <p>This service is not affiliated with JavaZone, nor does it have any official endorsement
                            from the organizers.</p>
                        <p>The service is considered in a closed beta phase, available by invite only.</p>
                    </div>
                    <!-- Section: Disclaimer  -->
                    <!-- Grid column -->

                    <!-- Grid column -->
                    <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
                        <!-- Links -->
                        <h6 class="text-uppercase fw-bold mb-4">Links</h6>
                        <p>
                            <a href="https://github.com/mortenlj/javazone" class="text-reset">Source</a>
                        </p>
                        <p>
                            <a href="https://github.com/mortenlj/javazone/issues" class="text-reset">Issue
                                tracker</a>
                        </p>
                        <p>
                            <a href="/docs" class="text-reset">API documentation</a>
                        </p>
                    </div>
                    <!-- Grid column -->
                </div>
                <!-- Grid row -->
            </div>
        </section>

        <!-- Copyright -->
        <div class="text-center p-4 bg-body-secondary">
            Â© Copyright:
            <a class="text-reset fw-bold" href="https://home.ibidem.no/">Morten Lied Johansen</a>
        </div>
        <!-- Copyright -->
    </footer>
    <!-- Footer -->
</div>
</body>
</html>
