{% extends 'base.html.j2' %}

{% block content %}
    <h4>{{ page.title }}</h4>
    <p>{{ page.description }}</p>

    <div class="container text-center">
        <ul class="nav nav-pills nav-fill" id="sessionsTab" role="tablist">
            {% for day in page.days %}
                {% set button_class = "nav-link active" if loop.first else "nav-link" %}
                <li class="nav-item" role="presentation">
                    <button class="{{ button_class }}" id="{{ day.id }}-tab" data-bs-toggle="pill" data-bs-target="#{{ day.id }}" type="button" role="tab" aria-controls="{{ day.id }}" aria-selected="true">{{ day.name }}</button>
                </li>
            {% endfor %}
        </ul>
        <div class="tab-content" id="sessionsTabContent">
            {% for day in page.days %}
                {% set pane_class = "tab-pane fade show active" if loop.first else "tab-pane fade" %}
                <div class="{{ pane_class}}" id="{{ day.id }}" role="tabpanel">
                    {% for block in day.session_blocks %}
                        <div class="container border rounded m-3 pb-2 text-bg-secondary">
                            <h5 class="mt-3">{{ block.start() }}</h5>
                            {% for session in block.sessions %}
                                {% include "widgets/session_small.html.j2" %}
                            {% endfor %}
                        </div>
                    {% endfor %}
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
